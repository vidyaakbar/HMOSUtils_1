<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">
    <TextField
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:min_width="250vp"
        ohos:id="$+id:Dpinput"
        ohos:top_margin="30vp"
        ohos:hint="Enter value"
        ohos:left_padding="35vp"
        ohos:bottom_padding="10vp"
        ohos:right_padding="20vp"
        ohos:top_padding="10vp"
        ohos:hint_color="#FFA7DEC1"
        ohos:background_element="$graphic:background_ability_main"
        ohos:text_size="19vp"

        />
    <Button
        ohos:id="$+id:button"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="20fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Convert Dp to Px"
        ohos:below="$id:Dpinput"
        ohos:text_color="$ohos:color:id_color_bottom_tab_icon_auxcolor01_dark"
        ohos:background_element="$graphic:capsule_button_element"
        ohos:top_margin="30fp"
        ohos:left_margin="35vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />

    <Button
        ohos:id="$+id:buttonpx"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="20fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Convert Px to Dp"
        ohos:below="$id:button"
        ohos:text_color="$ohos:color:id_color_bottom_tab_icon_auxcolor01_dark"
        ohos:background_element="$graphic:capsule_button_element"
        ohos:top_margin="12fp"
        ohos:left_margin="35vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />

    <Button
        ohos:id="$+id:buttonsptopx"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="20fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Convert Sp to Px"
        ohos:below="$id:buttonpx"
        ohos:text_color="$ohos:color:id_color_bottom_tab_icon_auxcolor01_dark"
        ohos:background_element="$graphic:capsule_button_element"
        ohos:top_margin="12fp"
        ohos:left_margin="35vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />

    <Button
        ohos:id="$+id:buttonpxtosp"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="20fp"
        ohos:layout_alignment="horizontal_center"
        ohos:text="Convert Px to Sp"
        ohos:below="$id:buttonsptopx"
        ohos:text_color="$ohos:color:id_color_bottom_tab_icon_auxcolor01_dark"
        ohos:background_element="$graphic:capsule_button_element"
        ohos:top_margin="12fp"
        ohos:left_margin="35vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />


    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:min_width="250vp"
        ohos:id="$+id:display"
        ohos:hint="Converted value is "
        ohos:bottom_padding="10vp"
        ohos:right_padding="17vp"
        ohos:left_padding="35vp"
        ohos:top_padding="10vp"
        ohos:below="$id:buttonpxtosp"
        ohos:text_size="22vp"
        ohos:top_margin="15vp"
        ohos:background_element="$graphic:background_ability_main"/>


</DependentLayout>